<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mahendrachhimwal.twitter" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.ui.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ui.TweetListActivity"
            android:label="@string/title_activity_tweet_list" >
        </activity>
        <activity
            android:name=".ui.ui.TweetDetailActivity"
            android:label="@string/title_activity_tweet_detail"
            android:parentActivityName=".ui.ui.TweetListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mahendrachhimwal.twitter.ui.ui.TweetListActivity" />
        </activity>
    </application>

</manifest>
